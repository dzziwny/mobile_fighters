    "version": "0.2.0",
    "configurations": [
        {
            "name": "app",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}/app"
        },
        {
            "name": "server",
            "type": "dart",
            "request": "launch",
            "program": "bin/main.dart",
            "cwd": "${workspaceFolder}/server",
            "preLaunchTask": "killProcessOnPort8080"
        },
        
    ],
    "compounds": [
        {
          "name": "app/server",
          "configurations": ["server", "app"],
          "stopAll": true
        }
      ]
}